<% include partials/_header %>


<div class="container">
  <div classclass="col-md-12">


    <div class="span8">
      <h4>
        <%= task.sfname %>
        <%= task.slname %>
      </h4>
      <h6>Course:
        <%= task.sclass %>
      </h6>
      <h6>Address:
        <%= task.saddr %>
      </h6>

    </div>
    <br><br>
  </div>





  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2>
          Internal Grade Card</h2>
      </div>
    </div>

    <div class="row">

      <div class="col-md-12">
        <div class="widget blank no-padding">
          <div class="panel panel-default work-progress-table">
            <!-- Default panel contents -->

            <div class="dropdown rounded">

              <input type="button" onclick="location.href='/mark/<%= task._id %>';" value="Update" class="btn btn-primary" />
              <br><br>
            </div>
          </div>
          <!-- Table -->
          <table id="mytable" class="table table-striped">
            <thead>
              <tr>
                <th>Semester</th>
                <th>Assignment</th>
                <th>Seminar</th>
                <th>Assessment</th>
                <th>Exam</th>
                <th>Total</th>
              </tr>
            </thead>
            <tbody>
              <tr>

                <td>Sem 1</td>
                <td><%= task.sem1as %></td>
                <td><%= task.sem1se %></td>
                <td><%= task.sem1mt %></td>
                <td><%= task.sem1ex %></td>
                <td><%= (task.sem1ex+task.sem1mt+task.sem1se+task.sem1as) %></td>
              </tr>
              <tr>
                <td>Sem 2</td>
                <td><%= task.sem2as %></td>
                <td><%= task.sem2se %></td>
                <td><%= task.sem2mt %></td>
                <td><%= task.sem2ex %></td>
                <td><%= (task.sem2ex+task.sem2mt+task.sem2se+task.sem2as) %></td>
              </tr>
              <tr>
                  <td>Sem 3</td>
                  <td><%= task.sem3as %></td>
                  <td><%= task.sem3se %></td>
                  <td><%= task.sem3mt %></td>
                  <td><%= task.sem3ex %></td>
                  <td><%= (task.sem3ex+task.sem3mt+task.sem3se+task.sem3as) %></td>
              </tr>
              <tr>
                  <td>Sem 4</td>
                  <td><%= task.sem4as %></td>
                  <td><%= task.sem4se %></td>
                  <td><%= task.sem4mt %></td>
                  <td><%= task.sem4ex %></td>
                  <td><%= (task.sem4ex+task.sem4mt+task.sem4se+task.sem4as) %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>