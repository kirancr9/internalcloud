<% include partials/_header %>


<div class="container">
    <input type="button" onclick="location.href='/addnew';" value="New Student" class="btn btn-primary" />
    <br><br>
  <div class="row">
    <!--FORM-->
    

   
    <!-- LIST -->
    <div class="col-md-10">
      <table class="table table-bordered table-hover" align="center">
        <thead>
          <tr>
            <th>SL No</th>
            <th>Name</th>
            <th>Class</th>
            <th>Total Marks</th>
            <th>Operations</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < tasks.length; i++) { %>
            <tr>
              <td><%= i + 1%></td>
              <td><strong><%= tasks[i].sfname %> <%= tasks[i].slname %></strong></td>
              <td><%= tasks[i].sclass %></td>
              <td><%= (tasks[i].sem1ex+tasks[i].sem1mt+tasks[i].sem1se+tasks[i].sem1as+tasks[i].sem2ex+tasks[i].sem2mt+tasks[i].sem2se+tasks[i].sem2as+tasks[i].sem3ex+tasks[i].sem3mt+tasks[i].sem3se+tasks[i].sem3as+tasks[i].sem4ex+tasks[i].sem4mt+tasks[i].sem4se+tasks[i].sem4as) %></td>
              <td>
                <a a href="/showint/<%= tasks[i]._id %>" class="btn btn-info">Show Marks</a>
                <a href="/delete/<%= tasks[i]._id %>"
                  class="btn btn-danger">
                  Delete
                </a>
                <a href="/edit/<%= tasks[i]._id %>" class="btn btn-primary">
                  Edit
                </a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>

    </div>
  </div>

</div>

